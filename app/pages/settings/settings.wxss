/* 设置页面样式 */
.container {
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background-color: #e63946;
  color: #fff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  background-color: #fff;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.user-nickname {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.user-vip {
  display: flex;
  align-items: center;
}

.vip-badge {
  background-color: #ffdd00;
  color: #e63946;
  font-size: 22rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.vip-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.login-btn {
  padding: 12rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 设置列表 */
.settings-container {
  flex: 1;
  padding: 20rpx 0;
}

.settings-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx 30rpx 10rpx;
}

.settings-list {
  background-color: #fff;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  font-size: 40rpx;
  color: #666;
  margin-right: 20rpx;
  width: 40rpx;
  display: flex;
  justify-content: center;
}

.item-title {
  font-size: 32rpx;
  color: #333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-tag {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.item-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.item-arrow {
  color: #ccc;
  font-size: 30rpx;
}

/* 版本信息 */
.app-version {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
}

.version-text {
  display: block;
  margin-bottom: 10rpx;
}

.copyright {
  display: block;
} 