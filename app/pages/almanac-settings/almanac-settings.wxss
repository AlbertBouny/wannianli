/* 黄历设置页面样式 */
.container {
  display: flex;
  flex-direction: column;
  padding: 0 0 30rpx 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #e63946;
  padding: 30rpx 30rpx;
  color: #fff;
  text-align: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.settings-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.picker-content {
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #e63946;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.reset-btn {
  margin: 30rpx 20rpx;
  background-color: #e63946;
  color: white;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.tip-view {
  text-align: center;
  margin: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
}

.data-source-info {
  padding: 10rpx;
}

.data-source-info text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
} 