.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  display: flex;
  background-color: #ffffff;
  box-shadow: 0 -1rpx 6rpx rgba(0, 0, 0, 0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.tab-bar-item-image {
  width: 40rpx;  /* 将图标尺寸进一步减小 */
  height: 40rpx;
  margin-bottom: 8rpx;
}

.tab-bar-item-text {
  font-size: 22rpx;
  line-height: 1;
} 