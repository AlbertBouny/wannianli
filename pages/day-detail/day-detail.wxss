/* pages/day-detail/day-detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  padding: 0 0 120rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  position: relative;
}

/* 日期导航样式 */
.date-navigator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #e63946;
  color: white;
}

.date-arrow {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

.date-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
}

.weekday-text {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 4rpx;
}

.today-btn {
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

/* 农历卡片样式 */
.lunar-card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.lunar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.lunar-title {
  font-size: 28rpx;
  color: #666;
}

.zodiac {
  margin-left: 10rpx;
  color: #e63946;
}

.collect-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.collect-icon {
  width: 36rpx;
  height: 36rpx;
}

.collected .collect-icon {
  color: #f9a826;
}

.lunar-main {
  text-align: center;
  margin-bottom: 30rpx;
}

.lunar-date {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.festival {
  font-size: 28rpx;
  color: #e63946;
}

.ganzhi-info {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.ganzhi-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ganzhi-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.ganzhi-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 天气卡片样式 */
.weather-card {
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.weather-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.weather-icon image {
  width: 100%;
  height: 100%;
}

.weather-info {
  flex: 1;
}

.weather-main {
  display: flex;
  align-items: baseline;
  margin-bottom: 10rpx;
}

.weather-condition {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 16rpx;
}

.weather-temp {
  font-size: 28rpx;
  color: #666;
}

.weather-details {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.weather-wind {
  margin-right: 20rpx;
}

/* 通用卡片样式 */
.almanac-card,
.direction-card,
.events-card {
  margin: 0 20rpx 20rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #e63946;
  line-height: 1.2;
}

/* 宜忌卡片样式 */
.almanac-content {
  padding: 10rpx 0;
}

.almanac-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.almanac-row:last-child {
  margin-bottom: 0;
}

.row-title {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.good {
  background-color: #e63946;
}

.bad {
  background-color: #2a9d8f;
}

.row-content {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.activity-tag {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  margin: 0 10rpx 10rpx 0;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333;
}

/* 方位信息卡片样式 */
.direction-content {
  padding: 10rpx 0;
}

.direction-row {
  display: flex;
  padding: 14rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.direction-row:last-child {
  border-bottom: none;
}

.row-label {
  width: 120rpx;
  color: #666;
  flex-shrink: 0;
}

.row-value {
  flex: 1;
  color: #333;
}

/* 日程列表卡片样式 */
.events-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-event-btn {
  font-size: 28rpx;
  color: #e63946;
  padding: 10rpx 0;
}

.events-list {
  padding: 0 0 10rpx;
}

.event-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.event-item:last-child {
  border-bottom: none;
}

.event-left {
  margin-right: 20rpx;
  padding-top: 6rpx;
}

.event-color-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.event-main {
  flex: 1;
}

.event-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.event-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.event-location {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.event-right {
  display: flex;
  align-items: center;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

.empty-events {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.3;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-add-btn {
  font-size: 28rpx;
  color: white;
  background-color: #e63946;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
}

/* 底部操作栏样式 */
.bottom-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background-color: white;
  padding: 20rpx 30rpx calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  z-index: 10;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  padding: 0;
  margin: 0;
  overflow: visible;
}

.action-btn::after {
  border: none;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
}

/* 加载遮罩样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e63946;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
} 