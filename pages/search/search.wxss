/* pages/search/search.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 搜索框 */
.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-input-box {
  flex: 1;
  height: 72rpx;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.search-button {
  width: 100rpx;
  height: 72rpx;
  background-color: #e63946;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 搜索历史和热门搜索 */
.search-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.tag-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.tag {
  font-size:
  26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 28rpx;
  padding: 10rpx 24rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.hot-tag {
  background-color: #f8e5e8;
  color: #e63946;
}

/* 分类选择器 */
.category-scroll {
  white-space: nowrap;
  background-color: #fff;
  padding: 0 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-list {
  display: inline-block;
  padding: 20rpx 10rpx;
}

.category-item {
  display: inline-block;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  border-radius: 28rpx;
}

.category-item.active {
  color: #fff;
  background-color: #e63946;
}

/* 搜索结果 */
.search-results {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.result-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.result-item:last-child {
  border-bottom: none;
}

.result-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.result-info {
  flex: 1;
}

.result-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.result-subtitle {
  font-size: 26rpx;
  color: #999;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 加载和空状态 */
.loading-view, .empty-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #e63946;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #999;
} 