/* pages/almanac-settings/almanac-settings.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

.settings-section {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #888;
  font-weight: 500;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.setting-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.picker-content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.picker-text {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

.reset-btn {
  margin: 40rpx 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f8f9fa;
  color: #e63946;
  border: 1rpx solid #e63946;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.tip-view {
  text-align: center;
  padding: 30rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #999;
} 