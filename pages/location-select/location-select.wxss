/* pages/location-select/location-select.wxss */

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏样式 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  padding: 20rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.search-input-wrap {
  position: relative;
  display: flex;
  align-items: center;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 20rpx;
}

.search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.search-clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

/* 搜索结果列表样式 */
.search-result {
  flex: 1;
  margin-top: 110rpx;
  background-color: white;
}

.search-tips, .searching-tips {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.city-list-header {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
}

.city-list-content {
  padding: 0 30rpx;
}

/* 城市列表容器样式 */
.city-container {
  flex: 1;
  margin-top: 110rpx;
}

/* 城市区块样式 */
.city-section {
  margin-bottom: 20rpx;
  background-color: white;
}

.city-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
}

.clear-history-btn {
  color: #e63946;
  font-size: 28rpx;
}

.city-section-content {
  padding: 0 30rpx;
}

/* 城市项样式 */
.city-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.city-item:last-child {
  border-bottom: none;
}

.city-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.city-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.city-badge.default {
  background-color: #e63946;
  color: white;
}

.city-badge.location {
  background-color: #f1f1f1;
  color: #666;
}

.city-action {
  font-size: 26rpx;
  color: #e63946;
  padding: 10rpx 0;
}

/* 定位状态样式 */
.location-status {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
}

.location-status.failed {
  color: #999;
}

.loading-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.location-text {
  font-size: 28rpx;
}

.retry-btn {
  color: #e63946;
  font-size: 28rpx;
}

/* 热门城市网格样式 */
.hot-cities {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.city-grid-item {
  width: 25%;
  padding: 16rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.city-grid-name {
  font-size: 28rpx;
  color: #333;
  position: relative;
  padding: 16rpx 30rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
}

.city-grid-name.default {
  color: #e63946;
  border: 1rpx solid #e63946;
  background-color: rgba(230, 57, 70, 0.05);
}

.city-grid-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #e63946;
} 