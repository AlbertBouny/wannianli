/* pages/settings/settings.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  position: relative;
  margin-right: 30rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #eee;
}

.vip-badge {
  position: absolute;
  bottom: -5rpx;
  right: -5rpx;
  background-color: #e63946;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.user-status {
  font-size: 26rpx;
  color: #999;
}

.vip-status {
  color: #e63946;
  font-weight: bold;
}

.arrow-right {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 设置组 */
.settings-container {
  width: 100%;
}

.settings-group {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.group-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.group-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.group-title {
  font-size: 28rpx;
  color: #888;
  font-weight: 500;
}

.group-content {
  width: 100%;
}

/* 设置项 */
.setting-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.setting-item:last-child {
  border-bottom: none;
}

.item-title {
  font-size: 30rpx;
  color: #333;
}

.item-action {
  display: flex;
  align-items: center;
}

.cache-size {
  font-size: 26rpx;
  color: #999;
  margin-right: 15rpx;
}

.picker-text {
  font-size: 26rpx;
  color: #999;
  display: flex;
  align-items: center;
}

/* 版本信息 */
.version-info {
  width: 100%;
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
  margin-top: auto;
} 